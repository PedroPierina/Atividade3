#include <stdio.h>
#include <stdlib.h>


struct aluno{
	int ra;
	char nome[50];
	float nota;
	struct aluno *prox;
};

void opcao1();
void opcao2();
void opcao3();
void opcao4();
void opcao5();

int main(){
	struct aluno *pessoa;
	int opcao = -1;


	while(opcao != 0){
		printf("             ---------------------------------\n");
		printf("             |              Menu             |\n");
		printf("             |1- Inserir cadastro do aluno   |\n");
		printf("             |2- Remover cadastro do aluno   |\n");
		printf("             |3- Buscar aluno por RA         |\n");
		printf("             |4- Buscar aluno por Nome       |\n");
		printf("             |5- Exibir dados de todos alunos|\n");
		printf("             |0- Sair                        |\n");
		printf("             ---------------------------------\n");

		scanf("%i", &opcao);

		switch(opcao){
		case 1:
			opcao1();
		break;

		case 2:
			opcao2();
		break;

		case 3:
			opcao3();
		break;

		case 4:
			opcao4();
		break;

		case 5:
			opcao5();
		break;

		case 0:
		break;

		default:
			printf("Opção Inválida.\n");
			break;
		}
	}
	return 0;
}
